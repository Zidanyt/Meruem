generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String  @unique
  password String
  points   Point[]
}

model Point {
  id           String   @id @default(cuid()) @map("_id")
  name         String
  street       String?
  neighborhood String
  city         String
  latitude     Float
  longitude    Float
  cnpj         String?
  userId       String
  user         User     @relation(fields: [userId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}